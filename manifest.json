{
    "manifest_version": 3,
    "name": "Odoo dev tools",
    "description": "Odoo dev tools",
    "version": "1.0",
    "action": {
        "default_popup": "/static/index.html",
        "default_icon": "/assets/images/odoo_dev.png"
    },
    "default_locale": "en",
    "icons": {
        "16": "/assets/images/odoo_dev.png",
        "32": "/assets/images/odoo_dev.png",
        "48": "/assets/images/odoo_dev.png",
        "128": "/assets/images/odoo_dev.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "notifications",
        "storage",
        "background"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*",
        "https://*/*/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "js": [
                "dist/loader.bundle.js"
            ],
            "world": "MAIN",
            "all_frames": true,
            "matches": [
                "http://*/web",
                "https://*/web",
                "http://*/web?*",
                "https://*/web?*"
            ]
        },
        {
            "run_at": "document_end",
            "js": [
                "dist/contentScript.bundle.js"
            ],
            "world": "ISOLATED",
            "all_frames": true,
            "matches": [
                "http://*/web",
                "https://*/web",
                "http://*/web?*",
                "https://*/web?*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "dist/*.bundle.js",
                "src/injected/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}